{
  "version": "1.1.0",
  "contextDirectories": {
    "main": "context",
    "snapshots": "context/snap",
    "templates": "context/template",
    "code": "context/code",
    "latest": "context/latest-context.txt"
  },
  "templateDirectories": {
    "rules": "templates",
    "tests": "templates"
  },
  "ignoredDirectories": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".git",
    "context",
    "target",
    "bin",
    "obj"
  ],
  "binaryExtensions": [
    ".o", ".obj", ".a", ".lib", ".so", ".dll", ".dylib", ".exe",
    ".rlib", ".rmeta",
    ".class", ".jar", ".war",
    ".pyc", ".pyo", ".pyd"
  ],
  "defaultSettings": {
    "autoClipboard": false,
    "minimize": true,
    "createLatestFile": true
  },
  "outputFormats": {
    "standard": "context.txt",
    "snapshot": "snap-[timestamp].txt",
    "template": "template-[timestamp].txt",
    "message": "[message].txt",
    "latest": "latest-context.txt"
  },
  "compressionSettings": {
    "enabled": true,
    "minSuffix": ".min"
  }
} 